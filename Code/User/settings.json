{
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.hidesExplorerArrows": true,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": true,
  "workbench.editor.showTabs": "single",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "window.zoomLevel": 1.2,
  "workbench.colorCustomizations": {
    "editorSuggestWidget.selectedBackground": "#231739",
    "sideBar.background": "#171d27",
    "list.activeSelectionBackground": "#231739",
    "list.inactiveSelectionBackground": "#231739",
    "list.focusBackground": "#231739",
    "list.hoverBackground": "#231739",
    "terminalCursor.foreground": "#C45DFF"
  },
  "window.menuBarVisibility": "toggle",
  "editor.minimap.enabled": false,
  "editor.guides.indentation": false,
  "editor.renderWhitespace": "boundary",
  "editor.renderLineHighlight": "none",
  "editor.matchBrackets": "never",
  "editor.lightbulb.enabled": "off",
  "editor.hover.enabled": true,
  "editor.showFoldingControls": "never",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.fontFamily": "JetBrainsMono Nerd Font, monospace",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.8,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "git.decorations.enabled": true,
  "scm.diffDecorations": "none",
  "files.insertFinalNewline": true,
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "onWindowChange",
  "workbench.activityBar.location": "hidden",
  "workbench.colorTheme": "Catppuccin Mocha",
  "terminal.integrated.fontFamily": "JetbrainsMono Nerd Font, monospace",
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.lineHeight": 1.8,
  "terminal.integrated.fontSize": 12,
  "editor.lineNumbers": "relative",
  "background.windowBackgrounds": ["/home/arch/Downloads/vscodewall.jpeg"],
  "background.backgroundOpacity": [0.2, 0.1, 0.1, 0.1],
  "latex-workshop.message.log.show": true,
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.clean.fileTypes": [
    "%DOCFILE%.aux",
    "%DOCFILE%.bbl",
    "%DOCFILE%.blg",
    "%DOCFILE%.idx",
    "%DOCFILE%.ind",
    "%DOCFILE%.lof",
    "%DOCFILE%.lot",
    "%DOCFILE%.out",
    "%DOCFILE%.toc",
    "%DOCFILE%.acn",
    "%DOCFILE%.acr",
    "%DOCFILE%.alg",
    "%DOCFILE%.glg",
    "%DOCFILE%.glo",
    "%DOCFILE%.gls",
    "%DOCFILE%.fls",
    "%DOCFILE%.log",
    "%DOCFILE%.fdb_latexmk",
    "%DOCFILE%.snm",
    "%DOCFILE%.synctex",
    "%DOCFILE%.synctex.gz",
    "%DOCFILE%.nav",
    "%DOCFILE%.vrb"
  ],
  "latex-workshop.latex.clean.method": "glob",
  "latex-workshop.latex.clean.subfolder.enabled": true,
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "window.titleBarStyle": "custom",
  "editor.codeLens": true,
  "errorLens.fontWeight": "bold",
  "errorLens.background": true,
  "errorLens.backgroundColor.warning": "#fffacd",
  "cSpell.userWords": ["siema"], // Customize as needed
  "window.restoreWindows": "none",
  "chat.editing.alwaysSaveWithGeneratedChanges": true,
  "background.autoInstall": false,
  "vue.server.hybridMode": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "liveServer.settings.donotShowInfoMsg": true
}
